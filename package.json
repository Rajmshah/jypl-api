{
    "name": "jypl-api",
    "version": "1.0.0",
    "description": "JYPL",
    "main": "app.js",
    "repository": "https://github.com/Rajmshah/jypl-api.git",
    "author": "Raj Shah <raj.mshah2015@gmail.com>",
    "license": "MIT",
    "scripts": {
        "start": "nodemon index.js"
    },
    "dependencies": {
        "async": "^3.1.0",
        "ejs": "^3.0.1",
        "fs-extra": "^8.1.0",
        "gridfs-stream": "^1.1.1",
        "html-pdf": "^3.0.1",
        "json2xls": "^0.1.2",
        "moment": "^2.24.0",
        "mongo-cursor-pagination": "^7.1.0",
        "populate": "^5.0.1",
        "sendgrid": "^5.2.3",
        "uuidv4": "^5.0.0",
        "wohlig-framework-core": "latest"
    },
    "devDependencies": {
        "@babel/core": "^7.1.2",
        "@babel/plugin-transform-async-to-generator": "^7.1.0",
        "@babel/plugin-transform-runtime": "^7.1.0",
        "@babel/preset-env": "^7.1.0",
        "@babel/register": "^7.0.0",
        "@babel/runtime": "^7.1.2",
        "eslint": "^5.6.0"
    },
    "prettier": {
        "trailingComma": "none",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": false,
        "arrowParens": "always"
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "es6": true
        },
        "extends": "eslint:recommended",
        "parserOptions": {
            "ecmaVersion": 8,
            "sourceType": "module"
        },
        "rules": {
            "no-undef": 1,
            "no-unused-vars": 1,
            "indent": [
                "error",
                4
            ],
            "linebreak-style": [
                "error",
                "unix"
            ],
            "quotes": [
                "error",
                "double"
            ],
            "semi": [
                "error",
                "never"
            ]
        },
        "globals": {
            "Router": true,
            "global": true,
            "app": true,
            "ajv": true,
            "_": true,
            "ValidateRequest": true,
            "StudentModel": true,
            "mongoose": true,
            "Schema": true,
            "Student": true
        }
    }
}
